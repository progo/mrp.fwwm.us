/* base
----------------------------------------------- */

.art_section {
  color:#615F00;
  margin-left:1em;
}

#newest-shout {
    color: gray;
    float: right;
    margin-right: 2em;
    margin-top: 10em;
    width: 30ex;
    position: relative;
    font-size: 8pt; /* small thoughts are small! */
}

body {
	margin: 0;
	padding: 0;
	font-family: Verdana, "Lucida Grande", Tahoma, Helvetica, sans-serif;
	color: #DED7A9;
	background-color: #000;
        
        /* gradient stripe */
        background-image: url(silh_gold_background.png);
        background-repeat: repeat-x;
}

blockquote, h3, p, li {
	padding-right: 10px;
	padding-left: 10px;
	font-size: 0.9em;
	line-height: 1.6em;
}

blockquote {
        /* tausta näkyy rumasti, ellei vähän kavenna */
	margin-right: 10%;
	margin-left: 20px;
        border-left: dashed thin #A97A00;
        background-color: #181100;
        font-style: italic;


}

h1, h2, h3 {
	margin: 0 0 15px 0;
	padding: 0 10px;
	font-weight: normal;
        color: #FFFCAB;
}



code {
    color: white;
}



h1, h2 {
	font-family: Georgia, Times, serif;
}

h1 {
	font-size: 1.4em;
}

h2 {
	font-size: 1.2em;
        margin-top: 1em;
	font-style: italic;
}

h3 {
  font-weight: bolder;
}

hr {
	margin: 2em auto;
	width: 370px;
	height: 1px;
	color: #7a7e7d;
	background-color: #7a7e7d;
	border: none;
}

small, .small {
	font-size: 0.9em;
}

/* links
----------------------------------------------- */

a {
	text-decoration: none;
	color: #FFFA00;
	border-bottom: 1px #D3CF07 solid;
}

a img {
 border: 0;
 text-decoration: none;
}

h1 a, h2 a, h3 a {
	border: none;
}

h3 a {
	font: 1.5em Georgia, Times, serif;
}

#site-name a {
	border: none;
        color: #000;
}

#sidebar-2 a, #sidebar-1 a {
	color: #FF5F00;
	border: none;
}

/* layout
----------------------------------------------- */

#accessibility {
	position: absolute;
	top: -10000px;
}

#container {
        margin: 0 auto 0 auto;
	padding: 0px;
	width: 80%;
}

#head {
	text-align: right;
        background-image: url(silh_transparent.png);
        background-repeat: no-repeat;

        color: #000;

        height: 400px;
        margin: 0;
        padding: 20px;
}

#site-name {
	margin: 0;
	font: 3em Georgia, Times, serif;
}

#site-slogan {
	font: italic 1em Georgia, Times, serif;
}

#sidebar-1, #sidebar-2 {
	padding-top: 50px;
	width: 150px;
}

#sidebar-1 {
	margin-right: 5px;
	float: left;
	text-align: right;
}

#sidebar-2 {
	margin-left: 5px;
	float: right;
}

.section_list {
	margin: 0 0 10px 0;
	padding: 0;
	list-style-type: none;
}

.category_list {
  margin: 0 0 10px 0;
  padding: 0;
  list-style-type: none;
  font-size: smaller;
}

/* "Aiheita" etc */
.sidebarhead {
  font-size: smaller;
  margin-bottom: 0;
}

.section_list ul {
	list-style-type: none;
}

.section_list li {
	margin: 0 10px 2px 0;
	padding: 0;
}


#content {
	margin: 0 8em 0 0;
	
}

#foot {
	margin-top: 5px;
	clear: both;
	text-align: center;
}

.tex {
  vertical-align: middle;
  margin-left: 4px;
  margin-right: 4px;
}

.mainheader {
 font-size: 2em;
 margin-bottom: 0.5em;
}

.blog_entry {
 margin-left: 2em;
}

.smallexcerpt{
 font-size: smaller;
}

/** tags */

.tags {
  color: gray;
  margin-left: 1em;
}

.tags a {
  color: #C0BC00;
  border-bottom: dashed thin #615E00;
}

.smalltags {
 font-size: 8pt;
}

.tag_cloud {
  font-size: smaller;
}

.tag_cloud a {
  border: none;
  text-decoration: none;
} 

ul.tag_list {
  float:left;
  width:10em;
  list-style-type:none;
}

